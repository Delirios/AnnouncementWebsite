@model Announcement
@foreach (var image in @Model.AnnouncementImages)
{
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/announcement/@image.Image.Name"/>
            <div class="card-body">
                <p class="card-text">@Model.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </div>
                    <small class="text-muted">@Model.DateAdded</small>
                </div>
            </div>
        </div>
    </div>
}