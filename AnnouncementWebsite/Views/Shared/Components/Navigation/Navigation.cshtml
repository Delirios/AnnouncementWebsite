@model AnnouncementListViewModel

<div class="navbar navbar-expand navbar-dark bg-dark shadow-sm">
    <div class="container d-flex flex-row">
        <a asp-controller ="Home" asp-action ="Index" class="navbar-brand d-flex align-items-center">
            <strong>Сайт оголошень</strong>
        </a>
        <div class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Категорії
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    @foreach (var category in @Model.Categories)
                    {
                        <a class="dropdown-item" asp-controller="Announcement" asp-action="AnnouncementList" asp-route-category="@category.CategoryName">@category.CategoryName</a>
                    }
                </div>
            </li>
            <a class="nav-item nav-link" href="#">Додати оголошення
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                </svg>
            </a>
            <partial name="_LoginPartial"/>
        </div>
    </div>
</div>