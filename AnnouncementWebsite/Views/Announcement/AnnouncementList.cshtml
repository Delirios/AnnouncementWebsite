@model AnnouncementListViewModel

    <main role="main">
        <div class="album py-5 bg-light">
            <div class="container">
                <h2>@Model.CurrentCategory.CategoryName</h2>
                <div class="row">
                    @foreach (var announcement in Model.Announcements)
                    {
                        <partial name="_AnnouncementCard" model="announcement" />
                    }
                </div>
            </div>
            </div>
    </main>
